<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RideRequestFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow2"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <TextView
            android:id="@+id/fullName_customer"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:ems="10"
            android:text="Name" />


        <TextView
            android:id="@+id/email_customer"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="Email" />

        <TextView
            android:id="@+id/phoneNumber_customer"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:ems="10"
            android:inputType="phone"
            android:text="Phone" />


        <Button
            android:id="@+id/TakeItButton"
            android:layout_width="121dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/yellow2"
            android:text="Take The Ride!" />

    </LinearLayout>
</FrameLayout>