<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow2"
    android:orientation="vertical"
    tools:context=".TakeRideActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="296dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/name_cus"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:textSize="25dp" />


        <TextView
            android:id="@+id/email_cus"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/phone_cus"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:textSize="25dp" />


        <Button
            android:id="@+id/TakeItButton"
            android:layout_width="160dp"
            android:layout_height="167dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/yellow2"
            android:onClick="onTakeIt"
            android:text="Take It" />

        <Button
            android:id="@+id/cancel_TakeRide"
            android:layout_width="160dp"
            android:layout_height="167dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/yellow2"
            android:onClick="onCancel"
            android:text="Cancel" />


    </LinearLayout>
</LinearLayout>